# frozen_string_literal: true

<%= constant_name %>_GEM_VERSION = '0.1.0'
<%= constant_name %>_SEMVER = '0.1.0'
<%= constant_name %>_REPO_URL = 'https://github.com/domainic/domainic'
<%= constant_name %>_HOME_URL = "#{<%= constant_name %>_REPO_URL}/tree/<%= name %>-v" \
                                "#{<%= constant_name %>_SEMVER}/<%= name %>".freeze

Gem::Specification.new do |spec|
  spec.name        = '<%= name %>'
  spec.version     = <%= constant_name %>_GEM_VERSION
  spec.authors     = ['Aaron Allen']
  spec.email       = ['hello@aaronmallen.me']
  spec.homepage    = <%= constant_name %>_HOME_URL
  spec.summary     = '<%= options[:summary] %>'
  spec.license     = 'MIT'

  spec.required_ruby_version = '>= 3.1'

  spec.files = Dir.chdir(__dir__) do
    Dir['{lib,sig}/**/*', '.yardopts', 'LICENSE', 'README.md', 'CHANGELOG.md'].reject { |f| File.directory?(f) }
  end
  spec.require_paths = ['lib']

  spec.metadata = {
    'bug_tracker_uri' => "#{<%= constant_name %>_REPO_URL}/issues",
    'changelog_uri' => "#{<%= constant_name %>_REPO_URL}/releases/tag/<%= name %>-v" \
                       "#{<%= constant_name %>_SEMVER}",
    'documentation_uri' => "https://rubydoc.info/gems/<%= name %>/<%= constant_name %>_GEM_VERSION",
    'homepage_uri' => <%= constant_name %>_HOME_URL,
    'rubygems_mfa_required' => 'true',
    'source_code_uri' => "#{<%= constant_name %>_REPO_URL}/tree/<%= name %>-v" \
                         "#{<%= constant_name %>_SEMVER}/<%= name %>"
  }
end
